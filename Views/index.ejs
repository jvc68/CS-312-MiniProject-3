<!DOCTYPE html>
<html>

	<head>
		<title>Daily Blog</title>
		<link rel="stylesheet" href="/styles.css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body>
		<h1 class="title">Daily Blog:</h1>
		<a href="signIn">Sign In</a>
		<a href="signUp">Sign Up</a>
		<hr>
		<form action="/addPost" method="POST" class="addPost">
			<h2>Create Post</h2>

			<label for="creator_name">Name:</label>
			<input type="text" name="creator_name" placeholder="Your Name" required maxlength="15">
			<br>

			<label for="title"> Title:</label>
			<input type="text" name="title" placeholder="Title" required maxlength="30">
			<br>

			<p>Content: </p>
			<textarea class="postInput" name="body" placeholder="Write about your day!" required maxlength="300"></textarea>
			<br>

			<button type="submit">Add Post</button>
	  	</form>

		<hr>

		<div class="postArea">

			<% if (posts.length == 0) { %>
				<div class="post">
				<h3>No Current Posts...</h3>
				</div>
			<% } %>

			<% posts.forEach((post, index) => { %>
				<div class="post">

					<h2><%= post.title %></h3>
					<p>by: <%= post.creator_name %></p>

					<hr>

					<p><%= post.body %></p>
					<p class="time"><%= post.date_created %></p>


					<form class="options" action="/editPost/<%= index %>" method="GET">
						<button type="submit" class="btn-edit">Edit</button>
					</form>

					<form class="options" action="/delete/<%= index %>" method="POST">
						<button type="submit" class="btn-delete">Delete</button>
					</form>

				</div>
			<% }) %>
		</div>
		

	</body>

</html>